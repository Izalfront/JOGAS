<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3solidprimary"
    tools:context=".MainActivity5">



    <ImageView
        android:id="@+id/layer2"
        android:layout_width="414dp"
        android:layout_height="450dp"
        android:elevation="1dp"
        android:src="@drawable/bg3solidprimaryrounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="416dp"
        android:layout_height="904dp"
        android:layout_marginBottom="160sp"
        android:src="@drawable/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="350sp"
        android:layout_height="500sp"
        android:elevation="2dp"
        app:cardCornerRadius="25dp"
        android:background="@drawable/bg"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:layout_width="151dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:columnCount="5"
            android:rowCount="2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/baseline_star_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/baseline_star_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/baseline_star_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@drawable/baseline_star_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="4"
                android:background="@drawable/baseline_star_24" />

        </GridLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/titik"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/titik"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Lisa R"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="135sp"
            />

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:background="@drawable/user"
            android:layout_gravity="center"
            android:layout_marginBottom="170dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/buttonProfile"
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:background="@drawable/bg3"
                android:contentDescription="Hubungi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/hubungi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubungi"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_chat_24"
                android:layout_marginStart="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/orderan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="49dp"
                android:text="Orderan tugas perbulan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginRight="135dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/isiWaktu"/>


            <TextView
                android:id="@+id/isiTugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="24dp"
                android:text="15 Tugas"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginRight="235dp"
                app:layout_constraintTop_toTopOf="@+id/orderan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/pengerjaanTugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:text="Rata rata pengerjaan tugas"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_marginRight="115dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/isiWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="26dp"
                android:text="2 hari 7 jam"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toTopOf="@+id/pengerjaanTugas"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/notewarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note : Tidak menerima tugas h -1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>