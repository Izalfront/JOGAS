<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer untuk elemen utama -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Warna latar belakang elemen -->
            <corners android:radius="4dp" /> <!-- Sudut lengkung elemen -->
        </shape>
    </item>
    <!-- Layer untuk bayangan -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Warna bayangan -->
            <corners android:radius="4dp" /> <!-- Sudut lengkung bayangan -->
        </shape>
    </item>
</layer-list>
